{
  "extends": [
    "airbnb",
    "plugin:prettier/recommended",
    "eslint:recommended"
  ],
  "plugins": [
    "jest"
  ],
  "rules": {
    "indent": [
      "error",
      2 // 2-spaces
    ],
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true
      },
      {
        "endOfLine": "auto"
      }
    ],
    "no-plusplus": "off",
    "max-classes-per-file": "off",
    "react/jsx-filename-extension": "off",
    "react/prefer-stateless-function": "off",
    "react/state-in-constructor": "off",
    "import/prefer-default-export": "off",
    "no-extra-parens": [
      "error",
      "all",
      {
        "nestedBinaryExpressions": false
      }
    ],
    "no-unused-vars": 2,
    "no-console": [
      "warn",
      {
        "allow": [
          "warn",
          "error"
        ]
      }
    ]
  },
  "env": {
    "jest/globals": true,
    "browser": true,
    "node": true,
    "es6": true
  },
  "parser": "babel-eslint"
}